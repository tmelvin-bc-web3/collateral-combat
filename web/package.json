{
  "name": "sol-battles-web",
  "version": "1.0.0",
  "description": "PvP Trading Battles on Solana - Frontend",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-coverage": "type-coverage",
    "type-coverage:ci": "type-coverage --at-least 97.50 --strict",
    "type-coverage:detail": "type-coverage --detail"
  },
  "typeCoverage": {
    "atLeast": 97.5,
    "strict": true,
    "cache": true,
    "ignoreFiles": [
      "**/node_modules/**",
      "**/*.test.{ts,tsx}",
      "**/*.spec.{ts,tsx}",
      "**/*.config.{js,ts}",
      "**/lib/session-betting/types.ts"
    ],
    "ignoreCatch": true,
    "ignoreUnread": true
  },
  "keywords": [
    "solana",
    "trading",
    "pvp",
    "battles"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@g-loot/react-tournament-brackets": "^1.0.30",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "clsx": "^2.1.1",
    "date-fns-tz": "^3.2.0",
    "lucide-react": "^0.561.0",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-countup": "^6.5.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.1.0",
    "react-swipeable": "^7.0.2",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "styled-components": "^6.3.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "jest": "^30.2.0",
    "knip": "^5.82.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3"
  }
}
