# ===================
# Sol Battles Frontend Environment Variables
# ===================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# Backend API URL
# REQUIRED in production - no localhost fallback
NEXT_PUBLIC_BACKEND_URL=https://your-backend-url.com

# Solana RPC URL
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Feature Flags
NEXT_PUBLIC_COMING_SOON=false
NEXT_PUBLIC_USE_ON_CHAIN=false

# Whitelisted Wallets (comma-separated)
# These wallets can bypass coming-soon mode
NEXT_PUBLIC_WHITELISTED_WALLETS=wallet1,wallet2,wallet3

# Security: Secret for signing whitelist access tokens
# REQUIRED in production - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WHITELIST_SECRET=your_secure_random_secret_here
