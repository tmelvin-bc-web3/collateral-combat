# ===================
# Sol Battles Backend Environment Variables
# ===================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Server Configuration
PORT=3001
NODE_ENV=development

# Database (PostgreSQL - required for waitlist)
DATABASE_URL=postgres://user:password@host:5432/database

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# API Keys
CMC_API_KEY=your_coinmarketcap_api_key
HELIUS_API_KEY=your_helius_api_key

# Wallet Private Keys (base58 encoded)
# SECURITY: These control funds - keep them secret!
ESCROW_WALLET_PRIVATE_KEY=your_escrow_wallet_private_key
REBATE_WALLET_PRIVATE_KEY=your_rebate_wallet_private_key
BATTLE_AUTHORITY_PRIVATE_KEY=your_battle_authority_private_key
SESSION_BETTING_AUTHORITY_PRIVATE_KEY=your_session_betting_authority_private_key

# Admin Configuration
# Comma-separated list of wallet addresses with admin access
ADMIN_WALLETS=wallet1,wallet2,wallet3

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://www.degendome.xyz,https://degendome.xyz

# Security Options
# JWT secret for session tokens - MUST be set in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here

# Set to 'true' to require wallet signatures on all authenticated endpoints
# WARNING: Enable this only after updating frontend to send signatures
REQUIRE_WALLET_SIGNATURES=false

# Development Options
DISABLE_SIMULATOR=false
