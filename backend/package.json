{
  "name": "sol-battles-backend",
  "version": "1.0.0",
  "description": "PvP Trading Battles on Solana - Backend",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-coverage": "type-coverage",
    "type-coverage:ci": "type-coverage --at-least 90.67 --strict",
    "type-coverage:detail": "type-coverage --detail"
  },
  "typeCoverage": {
    "atLeast": 90.67,
    "strict": true,
    "cache": true,
    "ignoreFiles": [
      "**/node_modules/**",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.config.{js,ts}",
      "**/scripts/**"
    ],
    "ignoreCatch": true,
    "ignoreUnread": true
  },
  "keywords": [
    "solana",
    "trading",
    "pvp",
    "battles"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.98.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "better-sqlite3": "^12.6.2",
    "bs58": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "pg": "^8.17.2",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "tweetnacl": "^1.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node-cron": "^3.0.11",
    "audit-ci": "^7.1.0",
    "jest": "^30.2.0",
    "knip": "^5.82.1",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3"
  }
}
